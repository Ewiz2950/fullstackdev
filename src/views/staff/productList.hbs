<div class="container px-0">
    <div class="vh-100 overflow-auto" style="padding-top: 3.5rem;">
        <div class="row m-0">
            <h1 class="col-11">Products</h1>
            <a class="btn btn-success ms-auto h-50 col-1" href="/staff/product/add" method="GET" style="margin-top:0.55rem"><i
                    class="bi bi-plus-circle mr-2"></i> Add</a>
        </div>
        <form class="form-inline mt-md-0 input-group mb-2" action="" name='q' id="search" novalidate>
            <input class="form-control" type="text" placeholder="Search for products" aria-label="Search" name="q"
                required style="height:2.5rem;width:30rem">
            <div class="input-group-append">
                <button class="btn btn-primary input-group-text bg-primary my-2 my-sm-0" type="submit"
                    style="height:2.5rem"><i class="bi bi-search text-light" style="margin-bottom:0.3em"></i></button>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Listing</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr class="table {{#unless listed}}table-secondary{{/unless}}">
                        <th scope="row" class="text-center">
                            <img src="/uploads/{{{imageName}}}" style="width:90px;height:110px">
                        </th>
                        <td>{{{name}}}</td>
                        <td>{{{brand}}}</td>
                        <td>{{{price}}}</td>
                        <td>{{{category}}}</td>
                        <td>{{{promotion}}}</td>
                        <td>
                            <ul>
                                <li class="list-unstyled text-center mt-3">
                                    {{#if listed}}
                                    <a class="btn btn-sm btn-danger list" href="/staff/product/unlist/{{{id}}}"><i
                                            class="bi bi-archive-fill mr-2"></i> Unlist</a> 
                                    {{/if}}
                                    {{#unless listed}}
                                    <a class="btn btn-sm btn-danger list" href="/staff/product/relist/{{{id}}}"><i class="bi bi-arrow-clockwise mr-2"></i>Relist</a>
                                    {{/unless}}
                                     <a class="btn btn-sm btn-warning mr-2" href="/staff/product/update/{{{id}}}"><i class="bi bi-pencil-fill mr-2"></i> Update</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
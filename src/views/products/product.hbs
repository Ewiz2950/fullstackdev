<main id="productPage">
    <div class="container p-0">
        <div class="card mt-5 mx-auto flex">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <img src="/uploads/{{{product.images.[0]}}}" class="card-img p-4" id="main-img"
                        alt="product">
                    <div class="row g-0 border-right">
                        {{#each product.images}}
                        <div class="col-3">
                            <img src="/uploads/{{{this}}}" class="card-img" id="main-img"
                            alt="product">
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card-body p-4 d-flex flex-column">
                        <p class="card-text text-decoration-underline mb-2">{{{product.brand}}}</p>
                        <h4 class="card-title font-weight-bold">{{{product.name}}}</h4>
                        <ul class="list-inline">
                            <li class="list-inline-item"><i class="bi bi-star-fill text-warning"></i></li>
                            <li class="list-inline-item"><i class="bi bi-star-fill text-warning"></i></li>
                            <li class="list-inline-item"><i class="bi bi-star-fill text-warning"></i></li>
                            <li class="list-inline-item"><i class="bi bi-star-fill text-warning"></i></li>
                            <li class="list-inline-item"><i class="bi bi-star-fill text-warning"></i></li>
                            <a href="#anchor-name">5</a>
                            <small class="text-secondary"> reviews</small>
                            
                        </ul>
                        <h4 class="card-title mt-4">${{{product.price}}}</h3>
                        <p class="card-text mt-5 pb-5">{{{product.description}}}</p>
                        <ul class="list-unstyled mb-0">
                            <li class="d-inline-block mr-3"><a href="" class="btn btn-primary mt-auto"><i
                                        class="bi bi-cart-plus"></i> Add to Cart</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-0 mt-5">
            <h4 class="text-left">Similar Products</h4>
        </div>
